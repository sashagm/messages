{
    "name": "sashagm/messages",
    "description": "Система личных сообщений для Laravel +10.x",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "sashagm",
            "email": "example@gmail.com",
            "homepage": "https://github.com/sashagm"
        }
    ],
    "require": {
        "php": "^8.0",
        "laravel/framework": "^10.0",
        "guzzlehttp/guzzle": "^7.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2"
    },
    "autoload": {
        "psr-4": {
            "Sashagm\\Messages\\": "src",
            "Sashagm\\Messages\\Tests\\": "tests"
        }
